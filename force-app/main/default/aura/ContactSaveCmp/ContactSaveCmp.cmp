<aura:component controller="saveContactInfo" extends="c:lib_baseComponent"
                implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:attribute name="contact" type="Contract" default="{}"/>
     <lightning:layout multipleRows="true">
        <lightning:layoutItem padding="around-small" size="12" largeDeviceSize="6" mediumDeviceSize="6">
            <lightning:input type="text" label="Last Name" value="{!v.contact.LastName}"/>
            <lightning:input type="text" label="Phone" value="{!v.contact.Phone}"/>
        </lightning:layoutItem>
        <lightning:layoutItem padding="around-small" size="12" largeDeviceSize="6" mediumDeviceSize="6">
            <lightning:input type="text"  label="Department" value="{!v.contact.Department}"/>
            <lightning:input type="textArea" label="Description" value="{!v.contact.Description}"/>
        </lightning:layoutItem>
    </lightning:layout>
    <div class="slds-align_absolute-center">
        <lightning:button label="save" title="save" onclick="{!c.onSave}"/>
        <lightning:button label="cancel" title="cancel" onclick="{!c.cancel}"/>
    </div>
</aura:component>